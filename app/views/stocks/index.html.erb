<%= form_tag stocks_path, method: :get, class: "mb-6" do %>
  <%= text_field_tag :query, params[:query], placeholder: "Search by name or symbol", class: "border p-2 rounded" %>
  <%= submit_tag "Search", name: nil, class: "bg-blue-500 text-white p-2 rounded ml-2" %>
<% end %>
<% @stocks.each do |stock| %>
  <%= link_to stock_path(stock['symbol']) do %>
    <%= stock['name'] %>
  <% end %> - <%= stock['symbol'] %> - <%= stock["price"]["currency"] %> <%= stock["price"]["amount"] %>
  <br>
<% end %>
