<div class="min-h-screen flex items-center justify-center bg-gray-100 p-6">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
    <p class="text-green-500 mb-4"><%= notice %></p>
    <p class="text-red-500 mb-4"><%= alert %></p>
    <h1 class="text-2xl font-bold mb-6">Sign in</h1>
    <%= form_with(url: sign_in_path, class: 'space-y-6') do |form| %>
      <div class="flex flex-col">
        <%= form.label :email, class: "block text-lg font-medium mb-2" %>
        <%= form.email_field :email, value: params[:email_hint], required: true, autofocus: true, autocomplete: "email", class: "border border-gray-300 p-3 rounded w-full focus:outline-none focus:ring focus:ring-blue-200 transition" %>
      </div>
      <div class="flex flex-col">
        <%= form.label :password, class: "block text-lg font-medium mb-2" %>
        <%= form.password_field :password, required: true, autocomplete: "current-password", class: "border border-gray-300 p-3 rounded w-full focus:outline-none focus:ring focus:ring-blue-200 transition" %>
      </div>
      <div>
        <%= form.submit "Sign in", class: "w-full text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 shadow-lg shadow-blue-500/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2 cursor-pointer" %>
      </div>
    <% end %>
    <div class="mt-6 flex justify-between items-center">
      <%= link_to "Sign up", sign_up_path, class: "text-blue-500 hover:underline" %>
      <%= link_to "Forgot your password?", new_identity_password_reset_path, class: "text-blue-500 hover:underline" %>
    </div>
  </div>
</div>
