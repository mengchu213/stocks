<%= render "shared/errors", object: @transaction %>
<%= form_with(model: @transaction, local: false, data: { turbo: "false" }, url: stock_transactions_path(stock_symbol: @stock_symbol)) do |form| %>
  <%= form.hidden_field :transaction_type %>
  <%= form.label :quantity %>
  <%= form.number_field :quantity %>
  <%= form.submit "Confirm", class: "cursor-pointer text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 shadow-lg shadow-blue-500/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2" %>
<% end %>
