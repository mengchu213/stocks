<%= turbo_frame_tag "transaction_frame" do %>
  <!-- Modal backdrop -->
  <div class="fixed top-0 left-0 w-full h-full bg-black bg-opacity-50 flex justify-center items-center z-50">
    <!-- Modal content -->
    <div class="bg-white rounded-lg w-11/12 md:w-1/2 lg:w-1/3 p-6 shadow-lg relative">
      <%= link_to "#", data: { action: "click->modal#close" }, class: "absolute top-3 right-3 text-gray-500 hover:text-red-500" do %>
        <i class="fas fa-times"></i>
      <% end %>
      <div class="mb-4">
        <h2 class="text-xl font-bold">Transaction</h2>
      </div>
      <%= render "shared/errors", object: @transaction %>
      <%= @stock_symbol %>
      <%= form_with(model: @transaction, local: false, data: { turbo: "false" }, url: stock_transactions_path(@stock_symbol), class: "space-y-4") do |form| %>
        <%= form.hidden_field :transaction_type %>
        <div>
          <%= form.label :quantity, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= form.number_field :quantity, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
        </div>
        <div>
          <%= form.submit "Confirm", class: "cursor-pointer text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 shadow-lg shadow-blue-500/50 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
